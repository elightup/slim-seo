{
  "name": "elightup/slim-seo",
  "type": "wordpress-plugin",
  "keywords": [
    "wordpress",
    "wordpress-plugin",
    "seo",
    "search engine",
    "search engine optimization"
  ],
  "description": "A fast & automated WordPress SEO plugin",
  "homepage": "https://wpslimseo.com",
  "license": "GPL-2.0",
  "authors": [
    {
      "name": "Tran Ngoc Tuan Anh",
      "email": "anhtnt@elightup.com",
      "homepage": "https://wpslimseo.com",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "SlimSEO\\": "src/"
    }
  },
  "require": {
    "elightup/slim-twig": "dev-master",
    "elightup/slim-seo-common": "dev-master",
    "php": ">=7.2"
  },
  "config": {
    "allow-plugins": true,
    "prepend-autoloader": false,
    "sort-packages": true
  },
  "scripts": {
    "phpcs": "phpcs --standard=phpcs.xml > phpcs.txt",
    "phpcbf": "phpcbf --standard=phpcs.xml",
    "phpstan": "phpstan --memory-limit=2048M > phpstan.txt"
  }
}